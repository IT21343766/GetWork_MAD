<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/payment_amount_viewer"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:textSize="24dp"
        android:gravity="center"
        android:hint="0.00"
        android:text="500.00"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/proceed_to_payment"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtotal"
        android:textSize="24dp"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/payment_amount_viewer"
        />

    <Button
        android:id="@+id/proceed_to_payment"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Proceed to payment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/back_from_payment_confirm"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Back"
        app:layout_constraintTop_toBottomOf="@+id/proceed_to_payment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/payment_loading_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/payment_amount_viewer"
        app:layout_constraintBottom_toTopOf="@id/proceed_to_payment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="336dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>